---
// src/components/Navbar.astro

// Mapeamos los nombres de la imagen a las secciones que ya tienes
const navItems = [
  { name: "Inicio", url: "#hero" },       // Enlace al inicio
  { name: "Habilidades", url: "#skills" }, 
  { name: "Experiencia", url: "#experiencia" },    // Enlace a tus proyectos
  { name: "Proyectos", url: "#proyectos" },    // (Aún no tenemos esta sección, queda de adorno por ahora)
  { name: "Contacto", url: "#contacto" }, // Enlace al footer
];
---

<nav class="fixed top-0 left-0 w-full z-50 transition-all duration-300">
  
  {/* Fondo oscuro con blur (Efecto cristal) */}
  <div class="absolute inset-0 bg-[#030712]/80 backdrop-blur-md border-b border-white/5"></div>

  <div class="container mx-auto px-6 md:px-12 relative z-10">
    <div class="flex items-center justify-between h-20">
      
      {/* 1. LOGO <AV /> */}
      <a href="#" class="text-2xl font-bold text-white tracking-tighter hover:opacity-80 transition-opacity">
        &lt;AV /&gt;
      </a>

      {/* 2. MENÚ ESCRITORIO (Centrado/Derecha) */}
      <div class="hidden md:flex items-center gap-8">
        
        {/* Enlaces */}
        <div class="flex items-center gap-6">
          {navItems.map(item => (
            <a 
              href={item.url} 
              class="text-sm font-medium text-gray-300 hover:text-white transition-colors"
            >
              {item.name}
            </a>
          ))}
        </div>

        {/* Separador Vertical */}
        <div class="h-6 w-px bg-gray-300 mx-2"></div>

    

        {/* Botón Download CV (Blanco con texto negro) */}
        <a 
          href="/cv.pdf" 
          target="_blank"
          class="bg-white text-gray-900 px-5 py-2 rounded-full text-sm font-semibold hover:bg-gray-200 transition-colors"
        >
          Download CV
        </a>

      </div>

      {/* 3. BOTÓN MENÚ MÓVIL (Hamburguesa) */}
      <button 
        id="menu-btn"
        class="md:hidden text-gray-300 hover:text-white focus:outline-none"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
  </div>

  {/* 4. MENÚ DESPLEGABLE MÓVIL */}
  <div id="mobile-menu" class="hidden md:hidden absolute top-full left-0 w-full bg-[#030712] border-b border-gray-800 shadow-2xl p-4 flex flex-col gap-4">
    {navItems.map(item => (
      <a href={item.url} class="mobile-link text-gray-300 hover:text-white text-lg font-medium py-2 border-b border-gray-800">
        {item.name}
      </a>
    ))}
    <a href="/cv.pdf" class="bg-white text-gray-900 text-center py-3 rounded-full font-bold mt-2">
      Download CV
    </a>
  </div>

</nav>

<script>
  document.addEventListener('astro:page-load', () => {
    const btn = document.getElementById('menu-btn');
    const menu = document.getElementById('mobile-menu');
    const links = document.querySelectorAll('.mobile-link');

    if (btn && menu) {
      btn.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
      links.forEach(l => l.addEventListener('click', () => menu.classList.add('hidden')));
    }
  });
</script>