---
import Navbar from "../components/Navbar.astro";
const { titulo = "Angelo Vaca | Ingeniero de Software & Data Analyst" } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth"> 
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        
        {/* SEO BÁSICO */}
        <title>{titulo}</title>
        <meta name="description" content="Portafolio profesional de Angelo Vaca. Ingeniero de Software y Analista de Datos especializado en Business Intelligence, Python y Desarrollo Web." />
        <meta name="author" content="Angelo Vaca" />
        <meta name="keywords" content="Angelo Vaca, Portafolio, Data Analyst, Ingeniero de Software, Ecuador, Power BI, Python, Astro" />

        {/* OPEN GRAPH (Para que se vea bonito al compartir en LinkedIn/WhatsApp) */}
        <meta property="og:title" content={titulo} />
        <meta property="og:description" content="Transformando datos en decisiones estratégicas. Mira mis proyectos y experiencia." />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://portafolio-angelo.vercel.app/" /> 
        <meta property="og:image" content="/social-preview.jpg" /> {/* Opcional: Una imagen tuya o de tu código en la carpeta public */}
    </head>
    
    <body class="bg-[#030712] text-white">
        <Navbar />
        <slot />
    </body>
</html>

<style is:global>
    
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: #030712; /* Coincide con tu Hero y Contacto */
        color: white;
    }

    /* Personalizar la barra de scroll (Toque Pro) */
    ::-webkit-scrollbar {
        width: 10px;
    }
    ::-webkit-scrollbar-track {
        background: #030712;
    }
    ::-webkit-scrollbar-thumb {
        background: #1e293b;
        border-radius: 5px;
    }
    ::-webkit-scrollbar-thumb:hover {
        background: #3b82f6; /* Azul al pasar el mouse */
    }
</style>