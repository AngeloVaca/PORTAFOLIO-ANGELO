---
const { titulo } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{titulo}</title>
	</head>
	<body>
        <slot />
	</body>
</html>

<style>
	html, body {
		margin: 0;
		width: 100%;
		height: 100%;
        font-family: system-ui, sans-serif;
        background: #13151a; /* Un fondo oscuro estilo dev */
        color: white;
	}
</style>