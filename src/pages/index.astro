---
import { useStoryblokApi } from '@storyblok/astro';
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
import Contact from '../components/Contact.astro';

// 1. Conectamos con la API de Storyblok
const storyblokApi = useStoryblokApi();

// 2. Pedimos la historia llamada "home" (así se llama la página de inicio en Storyblok por defecto)
const { data } = await storyblokApi.get('cdn/stories/home', {
  version: 'draft', // Usamos 'draft' para ver los cambios mientras editas
});

const story = data.story;
---

<Layout title="Angelo Vaca - Portfolio">
  
  <StoryblokComponent blok={story.content} />
  
  
  {/* AQUI LO PONES */}
  <Contact />

</Layout>