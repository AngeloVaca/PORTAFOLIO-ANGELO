---
import { storyblokEditable, renderRichText } from '@storyblok/astro';
const { blok } = Astro.props;

const renderedDescription = renderRichText(blok.description);
---

<div {...storyblokEditable(blok)} class="bg-[#111827] p-8 rounded-2xl border border-gray-800 hover:border-gray-700 transition-all duration-300 shadow-xl shadow-black/20">  
  <div class="flex flex-col md:flex-row gap-6 items-center">
    
    
   <div class="shrink-0">
      {
        (blok.logo_company?.filename || blok.company_logo?.filename) ? (
          <img 
            src={blok.logo_company?.filename || blok.company_logo?.filename} 
            alt="Logo" 
            class="w-16 h-16 md:w-24 md:h-24 rounded-lg object-contain bg-white p-2" 
          />
        ) : (
          <div class="w-16 h-16 md:w-24 md:h-24 rounded-lg bg-slate-700 flex items-center justify-center text-xs text-gray-400">
            No Logo
          </div>
        )
      }
    </div>

    <div class="w-full">
      
      <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-4 gap-2">
        <h3 class="text-xl md:text-2xl font-bold text-white">
          {blok.role}
        </h3>
        <span class="text-blue-200 text-sm font-medium bg-blue-900/30 px-3 py-1 rounded-full">
          {blok.date}
        </span>
      </div>

      <div class="prose prose-invert prose-slate max-w-none text-gray-300 leading-relaxed" set:html={renderedDescription}></div>
      
    </div>

  </div>
</div>