---
import { storyblokEditable } from '@storyblok/astro';
const { blok } = Astro.props;
---

<div {...storyblokEditable(blok)} class="flex flex-col items-center justify-center gap-4 p-6 rounded-2xl bg-gray-900/50 hover:bg-gray-800 transition-all duration-300 border border-gray-800 hover:border-gray-700 group">
  
  {
    blok.icon?.filename && (
      <img 
        src={blok.icon.filename} 
        alt={blok.name} 
        class="w-12 h-12 object-contain group-hover:scale-110 transition-transform duration-300"
      />
    )
  }

  <span class="text-gray-300 font-medium text-lg group-hover:text-white">
    {blok.name}
  </span>

</div>