---
import { storyblokEditable } from '@storyblok/astro';
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';

const { blok } = Astro.props;
---

<section {...storyblokEditable(blok)} id="skills" class="bg-[#030712] pt-4 pb-24 px-6">
  <div class="container mx-auto max-w-6xl">
    
    <div class="text-center mb-16 space-y-4">
      <span class="inline-block bg-slate-800 text-slate-200 border border-slate-700 px-5 py-2 rounded-full text-sm md:text-base font-bold tracking-wide uppercase transition-transform duration-300 hover:scale-105 cursor-default shadow-md shadow-slate-900/50">
  Habilidades
</span>
      <h2 class="text-3xl md:text-5xl font-bold text-white">
        {blok.title}
      </h2>
      <p class="text-gray-400 text-lg max-w-2xl mx-auto">
        {blok.subtitle}
      </p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      {
        blok.items?.map((item: any) => {
          // Esto llama autom√°ticamente al archivo SkillItem.astro por cada elemento en la lista
          return <StoryblokComponent blok={item} />
        })
      }
    </div>

  </div>
</section>